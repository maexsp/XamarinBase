<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinApp"
             x:Class="XamarinApp.MainPage">

    <MasterDetailPage.Master>

        <ContentPage Title="Back" BackgroundColor="LightGray">
            <StackLayout Orientation="Vertical" Margin="20" Spacing="10">
                <Button Text="Navigation Btn 1"/>
                <Button Text="Navigation Btn 2"/>
                <Button Text="Navigation Btn 3"/>
            </StackLayout>
        </ContentPage>

    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage Title="Nav page">
            <x:Arguments>
                <ContentPage BackgroundColor="White">
                    <StackLayout Margin="20" Spacing="10" Orientation="Vertical">
                        <Entry Text="Serial number 123456" />
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>

</MasterDetailPage>
