    <ContentPage.BindingContext>
        <local:ViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Margin="20">

        <StackLayout Orientation="Horizontal" HorizontalOptions="Start" >
            <Label Text="Size:" VerticalTextAlignment="Center" />
            <Label Text="{Binding FontSize}" VerticalTextAlignment="Center" Margin="0,0,20,0"/>
            <Button Text="+" Command="{Binding IncreaseFontSizeCommand}" />
            <Button Text="-" Command="{Binding DecreaseFontSizeCommand}" />

            <Label Margin="20,0,0,0" Text="Show border:" VerticalTextAlignment="Center"/>
            <Switch IsToggled="{Binding IsIconBackgroundOn, Mode=TwoWay}"/>
        </StackLayout>

        <Label Text="Font icons (materialdesignicons-webfont.ttf): "/>

        <FlexLayout x:Name="iconsFlexLayout" Direction="Row" Padding="0,10" AlignItems="Stretch" Wrap="Wrap">
            <FlexLayout.Resources>
                <Style TargetType="Image">
                    <Setter Property="Margin" Value="3"/>
                    <Setter Property="WidthRequest" Value="{Binding FontSize}"/>
                    <Setter Property="HeightRequest" Value="{Binding FontSize}"/>
                    <Setter Property="BackgroundColor" Value="Transparent"/>
                    <Style.Triggers>
                        <DataTrigger TargetType="Image" Binding="{Binding IsIconBackgroundOn}" Value="True">
                            <Setter Property="BackgroundColor" Value="SlateGray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </FlexLayout.Resources>

